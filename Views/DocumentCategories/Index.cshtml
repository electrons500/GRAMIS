@model IEnumerable<GRAMIS.Models.ViewModel.DocumentCategoriesViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View all Document Categories</h2><br />

<p>
    <a asp-action="AddDocumentCategory" class="btn btn-primary btn-sm"><span class="fa fa-plus-circle"> Add New Category</span></a>
</p>
<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="EditDocumentCategories" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-white"><span class="fa fa-edit"> Edit</span></a> 
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="DeleteDocumentCategories" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><span class="fa fa-trash"> Delete</span></a>
            </td>
        </tr>
}
    </tbody>
</table>
