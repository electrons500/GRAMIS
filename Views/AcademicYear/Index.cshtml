@model IEnumerable<GRAMIS.Models.ViewModel.AcademicYearViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View all Academic years</h2><br />

<p>
    <a asp-action="Addacyear" class="btn btn-primary btn-sm"><span class="fa fa-plus-circle"> Add new Academic year</span></a>
</p>
<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
               @* <a asp-action="EditAcyear" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><span class="fa fa-edit"> Edit</span></a>*@ 
               @* <a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="DeleteAcyear" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><span class="fa fa-trash"> Delete</span></a>
            </td>
        </tr>
}
    </tbody>
</table>
