@model IEnumerable<GRAMIS.Models.ViewModel.RegionViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View all Regions</h2><br />

<p>
    <a asp-action="AddRegion" class="btn btn-primary btn-sm"><span class="fa fa-plus-circle"> Add New Region</span></a>
</p>
<table class="table table-hover table-sm ">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegionName)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegionName)
            </td>
            <td>
                <a asp-action="EditRegion" asp-route-id="@item.Id" class="btn btn-warning text-white btn-sm"><span class="fa fa-edit"> Edit</span></a>
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                <a asp-action="DeleteRegion" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><span class="fa fa-trash"> Delete</span></a>
            </td>
        </tr>
}
    </tbody>
</table>
